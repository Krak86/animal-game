{
  "name": "animal-explorer",
  "description": "An interactive React Native educational game for children to learn animal names and sounds in three languages (English, Ukrainian, Russian). Features three distinct game modes including an exhibition mode for browsing all animals. Built with TypeScript, Expo, drawer navigation, and featuring image galleries, YouTube videos, Wikipedia integration, custom fonts, background music, and engaging animations.",
  "version": "1.0.0",
  "main": "index.ts",
  "homepage": "/animal-game/",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "docker:build": "docker-compose build",
    "docker:build:no-cache": "docker-compose build --no-cache",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:exec": "docker-compose exec animals-game-builder bash",
    "docker:install": "docker-compose exec animals-game-builder yarn install",
    "docker:arm64:local": "docker-compose exec animals-game-builder eas build --platform android --profile production-arm64 --local",
    "docker:clean": "docker-compose down -v",
    "build:android:debug": "cd android && ./gradlew assembleDebug",
    "build:android:release": "cd android && ./gradlew assembleRelease",
    "build:android:clean": "cd android && ./gradlew clean",
    "build:web": "node scripts/build-web.js",
    "open:web": "http-server dist -p 8080 -o"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.1.0",
    "@react-navigation/drawer": "^7.7.10",
    "@react-navigation/native": "^7.1.26",
    "@shopify/flash-list": "2.0.2",
    "expo": "~54.0.30",
    "expo-av": "^16.0.8",
    "expo-font": "~14.0.10",
    "expo-haptics": "^15.0.8",
    "expo-keep-awake": "^15.0.8",
    "expo-localization": "~17.0.8",
    "expo-navigation-bar": "~5.0.10",
    "expo-speech": "^14.0.8",
    "expo-splash-screen": "~31.0.13",
    "expo-status-bar": "~3.0.9",
    "expo-web-browser": "^15.0.10",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-reanimated": "~4.1.1",
    "react-native-reanimated-carousel": "^4.0.3",
    "react-native-safe-area-context": "^5.6.2",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "^15.12.1",
    "react-native-web": "^0.21.0",
    "react-native-web-webview": "^1.0.2",
    "react-native-webview": "13.15.0",
    "react-native-worklets": "^0.5.1",
    "react-native-youtube-iframe": "^2.4.1"
  },
  "private": false,
  "devDependencies": {
    "@types/node": "^24.10.2",
    "@types/react": "~19.1.10",
    "@types/react-dom": "~19.1.7",
    "@types/react-native": "^0.72.8",
    "babel-preset-expo": "~54.0.9",
    "react-native-svg-transformer": "^1.5.2",
    "typescript": "^5.9.3"
  }
}
