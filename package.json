{
  "name": "animals-game",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "docker:build": "docker-compose build",
    "docker:build:no-cache": "docker-compose build --no-cache",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:exec": "docker-compose exec animals-game-builder bash",
    "docker:install": "docker-compose exec animals-game-builder yarn install",
    "docker:clean": "docker-compose down -v",
    "build:android:debug": "cd android && ./gradlew assembleDebug",
    "build:android:release": "cd android && ./gradlew assembleRelease",
    "build:android:clean": "cd android && ./gradlew clean"
  },
  "dependencies": {
    "expo": "~54.0.27",
    "expo-av": "^16.0.8",
    "expo-font": "~14.0.10",
    "expo-speech": "^14.0.8",
    "expo-splash-screen": "~31.0.12",
    "expo-status-bar": "~3.0.9",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-web": "^0.21.0"
  },
  "private": true,
  "devDependencies": {
    "@types/node": "^24.10.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-native": "^0.72.8",
    "typescript": "^5.9.3"
  }
}
